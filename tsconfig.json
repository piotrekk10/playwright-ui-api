{
  "compilerOptions": {
    "allowJs": false,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "module": "esnext",
    "moduleResolution": "node",
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "esnext",
    "typeRoots": ["node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "@api/*": ["utils/models/api/*"],
      "@assertions/*": ["utils/assertions/*"],
      "@constants/*": ["utils/constants/*"],
      "@core/*": ["core/*"],
      "@data/*": ["utils/data/*"],
      "@pages": ["utils/models/pages"],
      "@panels": ["utils/models/pages/panels"],
      "@schema/*": ["utils/schema/*"],
    },
    "incremental": true
  },
  "exclude": ["node_modules", "public"],
  "include": ["**/*.ts"]
}
